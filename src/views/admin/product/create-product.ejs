<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content=" Dự án laptopshop" />
    <meta name="author" content="Hỏi Dân IT" />
    <title>USER-LAPTOPSHOP</title>
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/style.min.css" rel="stylesheet" />
     <!-- style css -->
    <link href="/admin/css/styles.css" rel="stylesheet" />
    <!-- fontawesome -->
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script>
      // Preview Image jquery
      $(document).ready(() => {
          const avatarFile = $("#avatarFile");
          avatarFile.change(function (e) {
              const imgURL = URL.createObjectURL(e.target.files[0]);
              $("#avatarPreview").attr("src", imgURL);
              $("#avatarPreview").css({ "display": "block" });
          });
      });
  </script>

</head>

<body class="sb-nav-fixed">
<!-- header -->
 <%- include('../layout/header'); -%>

     <!-- navbar  -->
     <div id="layoutSidenav">
 <%- include('../layout/navbar'); -%>

        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <h1 class="mt-4">Manager Product</h1>
                    <ol class="breadcrumb mb-4">
                        <li class="breadcrumb-item "><a href="/admin">Dashboard</a></li>
                        <li class="breadcrumb-item active"><a href="Create-Product">Create-Product</a></li>
                    </ol>    
                </div>
                <div style="width: 600px; margin: auto">
                  <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
                    <div class="alert alert-danger">
                      <ul>
                        <% errors.forEach(error => { %>
                          <li><%= error %></li>
                        <% }) %>
                      </ul>
                    </div>
                  <% } %>
                  <h3>Create a Product</h3>
                  <form action="/admin/product/handle-create-product" method="POST" enctype="multipart/form-data">
                     <div class="row">
                      <div class="mb-3 col-6">
                        <label  class="form-label">Name</label>
                        <input name="name" value="<%= oldData?.name || '' %>" type="text"  class="form-control"  placeholder="your name" >
                      </div>
                      <div class="mb-3 col-6">
                        <label  class="form-label">Price</label>
                        <input name="price" value="<%= oldData?.price || '' %>" type="number"  class="form-control" >
                      </div>
                     </div>
                          <!-- Detail description -->
                     <div class="my-3">
                      <label  class="form-label">Detail description</label>
                      <textarea name="detailDesc" class="form-control" value="<%= oldData?.detailDesc || '' %>"  rows="3" placeholder=" mô tả chi tiết "></textarea>
                    </div>
                    <!-- ShortDesc-Quality -->
                    <div class="row">
                      <div class="mb-3 col-6">
                        <label  class="form-label">Short description</label>
                        <input name="ShortDesc" type="text"  class="form-control" value="<%= oldData?.ShortDesc || '' %>"  placeholder="mô tả ngắn ngọn">
                      </div>
                      <div class="mb-3 col-6">
                        <label  class="form-label">Quality</label>
                        <input name="quality" type="number" value="<%= oldData?.quality || '' %>"  class="form-control"  >
                      </div>
                     </div> 
                     <!-- Factory-Target -->
                     <div class="row">
                      <div class="mb-3 col-6">
                          <label class="form-label">Factory</label>
                          <select name="factory" class="form-select">
                              <option value="APPLE">Apple (MacBook)</option>
                              <option value="ASUS">Asus</option>
                              <option value="LENOVO">Lenovo</option>
                              <option value="DELL">Dell</option>
                              <option value="LG">LG</option>
                              <option value="ACER">Acer</option>
                          </select>
                      </div>
                      <div class="mb-3 col-6">
                          <label class="form-label">Target</label>
                          <select name="target" class="form-select">
                              <option value="GAMING">Gaming</option>
                              <option value="SINHVIEN-VANPHONG">Sinh viên - Văn phòng
                              </option>
                              <option value="THIET-KE-DO-HOA">Thiết kế đồ họa</option>
                              <option value="MONG-NHE">Mỏng nhẹ</option>
                              <option value="DOANH-NHAN">Doanh nhân</option>
                          </select>
                      </div>
                  </div>
                               <!-- Upload avatar -->
                        <div class="my-3">
                          <label for="formFile" >UploadFile</label>
                          <input name="image" class="form-control" type="file" id="avatarFile" accept=".png, .jpg, .jpeg">
                        </div>
                        <img  style="max-height: 250px; display: none; margin: 0 auto;" alt="avatar preview" id="avatarPreview" />

                       
                        <div class="mt-3">
                          <button type="submit" class="btn btn-danger ">submit</button>
                        </div>                        
                       </div>
                       
                  </form>
                </main> 
                  <!-- footer -->
          <%- include('../layout/footer'); -%> 
              </div> 
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
        crossorigin="anonymous"></script>
    <script src="/admin/js/scripts.js"></script>
   

</html> 